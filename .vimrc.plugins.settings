" Map key
" Map leader key to ,
let mapleader = ","
let g:mapleader = ","

noremap <Leader>s :update<CR>

" Move between windows
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-l> <C-W>l
map <C-h> <C-W>h

set nu
set autoread
set autowrite
set autoindent
set si "smart indent
syntax on
let g:rehash256 = 1
set clipboard=unnamedplus
set cursorline
set backspace=indent,eol,start

" Disable all backup file
set nobackup
set nowb
set noswapfile
set backupdir=~/tmp,/tmp
set backupcopy=yes
set backupskip=/tmp/*,$TMPDIR/*,$TMP/*,$TEMP/*
set directory=/tmp

" Show indent
set listchars=tab:\|\ ,space:Â·
set list


" Start Nerd tree when open vim
" au VimEnter *  NERDTree
let NERDTreeShowHidden=1

" Use mouse
if has('mouse')
set mouse=a
endif

" Tagbar
nmap <F8> :TagbarToggle<CR>
nmap <F7> :NERDTreeToggle<CR>

